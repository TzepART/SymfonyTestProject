{% extends "layout.html.twig" %}


{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <div class="row">
            <h2 class="register_title">Authorization</h2>

            <form action="{{ path("fos_user_security_check") }}" method="post"
                  class="col-md-4 col-md-offset-4 create_register_form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                <div class="form-group">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"
                           required="required" placeholder="{{ 'security.login.username'|trans }}"/>
                </div>

                <div class="form-group">
                    <input class="form-control" type="password" id="password" name="_password" required="required"
                           placeholder="{{ 'security.login.password'|trans }}"/>
                </div>

                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    <label for="remember_me">remember me</label>
                </div>

                <div class="form-group">
                    <input type="submit" id="_submit" name="_submit" value="Log in"
                           class="btn login-btn btn-primary"/>
                </div>
            </form>

        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <a href="{{ path("facebook_login_page") }}" class="btn btn-success login-btn">Through facebook</a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <a href="{{ path ("fos_user_registration_register") }}" class="btn btn-success login-btn">Registration</a>
            </div>
        </div>

    </div>
    <style>
        .register_title{
            text-align: center;
        }

        .login-btn{
            width: 100%;
        }
    </style>

{% endblock fos_user_content %}
